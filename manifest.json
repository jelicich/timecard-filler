{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Timecard Filler",
  "description": "An extension to help you fill in your timecard",
  "author": "Esteban Jelicich",

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": [
      "https://caravelo.personio.de/attendance/employee",
      "https://caravelo.personio.de/attendance/employee/*"
    ],
    "js": ["content-scripts/content-scripts.js"]
  }],

  "background": {
    "service_worker": "background-scripts/background-scripts.js"
  },

  "web_accessible_resources": [{
    "resources": ["web-accessible-resources/web-accessible-resources.js"],
    "matches": [
      "https://caravelo.personio.de/*"
    ]
  }],

  "permissions": [
    "tabs",
    "webRequest",
    "storage"
  ],
  
  "host_permissions": [
    "*://caravelo.personio.de/*"
  ],

  "content_security_policy": {
    "extension_page":"script-src 'self' 'wasm-unsafe-eval'; object-src 'self'" 
  },

  "options_page": "options-page.html"
}